<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anime Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #121212;
            color: #f0f0f0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* NAVBAR */
        .navbar-custom {
            background-color: #1a1a1a;
            border-bottom: 2px solid #ff6600;
        }

        .navbar-brand {
            color: #ff6600 !important;
            font-weight: 800;
            letter-spacing: 0.08em;
            text-transform: uppercase;
        }

        .navbar-nav .nav-link {
            color: #ff9c4a !important;
            font-weight: 600;
            margin-left: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #ff6600 !important;
            }

        .dropdown-menu-dark {
            background-color: #1a1a1a !important;
            border: 1px solid #333 !important;
        }

            .dropdown-menu-dark .dropdown-item {
                color: #ff9c4a !important;
                font-weight: 500;
            }

                .dropdown-menu-dark .dropdown-item:hover {
                    background-color: #ff6600 !important;
                    color: white !important;
                }

        footer {
            background-color: #1a1a1a;
            border-top: 2px solid #ff6600;
            padding: 20px 0;
            text-align: center;
            color: #ff9c4a;
            font-weight: 600;
            margin-top: 50px;
        }

            footer a {
                color: #ff6600;
                text-decoration: none;
                margin: 0 8px;
            }

                footer a:hover {
                    color: #ff9c4a;
                    text-decoration: underline;
                }

        .main-content {
            padding-top: 30px;
            min-height: 80vh;
        }

        #toast {
            visibility: hidden;
            min-width: 260px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 8px;
            padding: 15px;
            position: fixed;
            z-index: 9999;
            left: 50%;
            bottom: 30px;
            transform: translateX(-50%);
            opacity: 0;
            transition: opacity 0.4s, bottom 0.4s;
        }

            #toast.show {
                visibility: visible;
                opacity: 1;
                bottom: 60px;
            }

        .toast-success {
            background-color: #28a745;
        }

        .toast-warning {
            background-color: #ff6600;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">

                <a class="navbar-brand" href="/">Anime Store</a>

                <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon text-light"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Products">Products</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Cart">Cart</a></li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning" data-bs-toggle="dropdown">
                                    @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="/Orders">My Orders</a></li>
                                    <li><a class="dropdown-item" href="/Wishlist">Wishlist</a></li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button type="submit" class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Identity/Account/Login">Login</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Identity/Account/Register">Register</a></li>
                        }

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main class="main-content container">
        @RenderBody()
    </main>

    <footer>
        © 2025 Anime Store |
        <a href="#">Privacy Policy</a> |
        <a href="#">Terms</a>
    </footer>

    <div id="toast"></div>

    <script>
        function showToast(message, type = "success") {
            const toast = document.getElementById("toast");
            toast.className = "show " + (type === "warning" ? "toast-warning" : "toast-success");
            toast.textContent = message;

            setTimeout(() => {
                toast.className = toast.className.replace("show", "");
            }, 3000);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
