@model int
@{
    ViewData["Title"] = "Order Confirmed";
}

<style>
    body {
        background: #0d0d0d;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        text-align: center;
        padding-top: 80px;
    }

    .box {
        background: #1a1a1a;
        padding: 40px;
        width: 500px;
        margin: auto;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.6);
    }
</style>

<div class="box">
    <h1 style="color:#5cb85c;">Order Placed Successfully</h1>

    <p>Your order ID is:</p>
    <h2 style="color:#ff6600;">#@Model</h2>

    <p>Thank you for shopping with Anime Store.</p>

    <a href="/Products"
       style="display:inline-block; margin-top:20px; padding:12px 20px; background:#ff6600; color:white; border-radius:6px; text-decoration:none;">
        Continue Shopping
    </a>
</div>
